#!/usr/bin/env oo-ruby

require 'rubygems'
require 'daemons'

options = {
    :backgrace => true,
    :ontop => false,
    :log_output => true,
    :dir_mode => :system,
    :multiple => false,
}

Daemons.run_proc('openshift-load-balancer-daemon', options) do
  require 'openshift/load-balancer/daemon'

  OpenShift::LoadBalancerConfigurationDaemon.new.listen
end
